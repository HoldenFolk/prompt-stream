{
  "manifest_version": 3,
  "name": "Chrome AI Raw Boilerplate",
  "description": "Minimal MV3 extension using Chrome Built\u2011in AI (Prompt + Summarizer) with plain HTML/JS/CSS.",
  "version": "0.1.0",
  "action": {
    "default_popup": "./src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "./src/background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite",
    "offscreen"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://gemini.google.com/*"],
      "js": ["./src/content/content_select.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["./src/content/content_gemini.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "./src/options.html"
}
